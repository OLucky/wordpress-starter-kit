{
    "env": {
        "browser": true,
        "commonjs": true,
        "node": true,
        "jquery": true,
        "es6":true
    },
    "parser": "babel-eslint",
    "parserOptions": {
        "sourceType": "module"
    },
    "plugins": ["compat"],
    "settings": {
      "polyfills": ["promises"]
    },
    "rules": {
        "no-delete-var":"error",
        "no-const-assign": "warn",
        "no-this-before-super": "warn",
        "no-undef": "warn",
        "no-unreachable": "warn",
        "no-unused-vars": "warn",
        "no-console": "warn",
        "constructor-super": "warn",
        "valid-typeof": "warn",
        "quotes": [
            "error",            
            "single"
        ],
        "indent": ["error", 2],
        "semi":"warn",
        "compat/compat": "error",
        "no-mixed-spaces-and-tabs":"warn"
    },
    "extends": [
        "eslint:recommended"
      ]
}